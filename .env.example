# =========================
# Server
# =========================
PORT=3000
NODE_ENV=development
APP_NAME=fazumi-whatsapp-summarizer

# =========================
# Supabase (backend only)
# =========================
SUPABASE_URL=https://YOURPROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY

# =========================
# WhatsApp (360dialog)
# =========================
D360_BASE_URL=https://waba-v2.360dialog.io
D360_API_KEY=YOUR_360DIALOG_API_KEY

# =========================
# Lemon Squeezy
# =========================
LEMON_SIGNING_SECRET=YOUR_LEMON_SIGNING_SECRET
LEMON_CHECKOUT_URL=https://YOUR_CHECKOUT_URL

# =========================
# OpenAI (Phase 4)
# =========================
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4o-mini

# Safety / cost controls
DRY_RUN=true
OPENAI_MAX_INPUT_CHARS=6000
OPENAI_MAX_OUTPUT_TOKENS=300
OPENAI_CONCURRENCY=2
OPENAI_RETRY_MAX=3
